<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>NEXO</RootNamespace>
    <Version>4.1.1</Version>
    <FileVersion>4.1.1</FileVersion>
    <AssemblyVersion>4.1.1</AssemblyVersion>
    <AssemblyName>PMS.NEXO30.CORE</AssemblyName>
    <Authors>philippemp31</Authors>
    <Description>nexo retailer v3.0</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/pmespace/PMS.NEXO</PackageProjectUrl>
    <RepositoryUrl>https://github.com/pmespace/PMS.NEXO</RepositoryUrl>
    <Copyright>PMS - philippemp31@outlook.com - 2021</Copyright>
    <PackageReleaseNotes>Refer to PMS.NEXO30</PackageReleaseNotes>
    <Product>PMS.NEXO30.CORE nexo retailer v3.0</Product>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\bin\</OutputPath>
    <DocumentationFile>..\bin\PMS.NEXO30.CORE.xml</DocumentationFile>
    <DefineConstants>TRACE;NEXO30</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\bin\</OutputPath>
    <DocumentationFile>..\bin\PMS.NEXO30.CORE.xml</DocumentationFile>
    <DefineConstants>TRACE;NEXO30</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\NEXO\EpasSaleToPOIMessages.xsd.30.cs" Link="EpasSaleToPOIMessages.xsd.30.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="PMS.COMMON.CORE" Version="5.2.4" />
    <PackageReference Include="PMS.COMMON.CORE.ODBC" Version="5.2.4" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="move /Y $(OutDir)..\$(TargetName).xml $(OutDir)" />
  </Target>

  <Target Name="CopyPackage" AfterTargets="Pack">
    <Copy SourceFiles="$(OutputPath)..\$(PackageId).$(PackageVersion).nupkg" DestinationFolder="$(SolutionDir)..\nuget\test" />
  </Target>

  <Import Project="..\NEXO_SHARED\NEXO_SHARED.projitems" Label="Shared" />

  <Import Project="..\NEXO_SERVER_SHARED\NEXO_SERVER_SHARED.projitems" Label="Shared" />

  <Import Project="..\NEXO_CLIENT_SHARED\NEXO_CLIENT_SHARED.projitems" Label="Shared" />

</Project>
